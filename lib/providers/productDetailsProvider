import 'package:flutter_riverpod/flutter_riverpod.dart';
import '../models/product_model.dart';
import '../services/catalog_service.dart';

final catalogServiceProvider = Provider((ref) => CatalogService());

final productDetailsProvider = FutureProvider.autoDispose.family<Product, int>((ref, productId) async {
  final catalogService = ref.read(catalogServiceProvider);
  final product = await catalogService.getProductById(productId); 
  return product;
});
